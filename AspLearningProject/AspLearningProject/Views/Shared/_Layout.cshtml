@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE HTML>
<html lang="en">
<head>
    
    <meta charset="utf-8">
    <title>Welcome to our store</title>
    <link rel="stylesheet" href="~/css/bundlecss/style.css" type="text/css" />
    <script src="~/js/bundle.min.js" type="text/javascript"></script>
</head>

<body>
 
    <header class="bg-dark text-center text-white top-0  w-100">
      
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
	                <ul class="navbar-nav">
		                <li class="nav-item">
			                <a class="nav-link active" aria-current="page" href="/">Home</a>
		                </li>
		                <li class="nav-item">
			                <a class="nav-link active" href="@Url.Action("Index", "Product")">Products</a>
		                </li>
		                <li class="nav-item">
			                <a class="nav-link active" href="@Url.Action("Index", "Category")">Categories</a>
		                </li>
                        @if (User.IsInRole("Administrator"))
                        {
	                        <li class="nav-item">
		                        <a class="nav-link active" href="@Url.Action("Index", "Users")">Users</a>
	                        </li>
                        }
                       
	                </ul>
	                <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        
        @if (!IsSectionDefined("header"))
        {
	        <p class="navbar-brand">MyStore</p>
        }
        else       
        { 
            @RenderSection("header", false)
        }

       

    </header>
    @await (Component.InvokeAsync<AspLearningProject.ViewComponents.BreadcrumbViewComponent>((List<AspLearningProject.Models.BreadcrumbElement>)ViewBag.Breadcrumbs))
   
    @RenderBody()
  
    <footer class="bg-dark text-center text-white bottom-0 position-fixed w-100">
        @if (IsSectionDefined("footer"))
        {
            @RenderSection("footer", false)
        }
        else
        {
            <p>Copyright Tatiana Budnikova  @DateTime.Now.Year</p>
        }
    </footer>
@RenderSection("scripts", false)
</body>
</html>